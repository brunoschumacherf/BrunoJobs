<div class='container'>
  <h1 class='mb-5'>Vagas</h1>
  <div class="row">
    <div class="col-lg-10">
      <% @vacancies.each do |vacancy| %>
        <%= render partial: 'vacancy_card', locals: { vacancy: vacancy } %>
      <% end %>
      <% if @vacancies.empty? %>
        <div class="text-center">Nenhuma vaga encontrada</div>
      <% end %>
    </div>
  </div>

  <div class="d-flex">
    <div class="mx-auto mt-5">
      <%= paginate @vacancies %>
    </div>
  </div>
</div>